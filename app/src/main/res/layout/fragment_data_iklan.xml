<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dataiklan.DataIklanFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_ads"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_margin="32dp"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="12dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/et_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATA IKLAN"
                android:textColor="@color/black"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_iklan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4"
                />

            <TextView
                android:id="@+id/et_nama_trainset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:text="Trainset"
                app:layout_constraintTop_toBottomOf="@id/et_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gl_iklan"/>

            <TextView
                android:id="@+id/et_content_nama_trainset"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text=": -"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_iklan"
                app:layout_constraintTop_toBottomOf="@id/et_title" />

            <TextView
                android:id="@+id/et_nama_kereta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:text="Kereta"
                app:layout_constraintTop_toBottomOf="@id/et_nama_trainset"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gl_iklan"/>

            <TextView
                android:id="@+id/et_double_dot"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text=":"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_iklan"
                app:layout_constraintTop_toBottomOf="@+id/et_nama_trainset" />

            <TextView
                android:id="@+id/et_content_nama_kereta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginHorizontal="8dp"
                android:text="-"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_nama_kereta" />

            <TextView
                android:id="@+id/et_nama_agency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="4dp"
                android:textStyle="bold"
                android:text="Nama Agency"
                app:layout_constraintEnd_toEndOf="@id/gl_iklan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_content_nama_kereta" />

            <TextView
                android:id="@+id/et_content_nama_agency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text=": -"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_iklan"
                app:layout_constraintTop_toBottomOf="@+id/et_content_nama_kereta" />

            <TextView
                android:id="@+id/et_nomor_kontrak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:text="Nomor Kontrak"
                app:layout_constraintTop_toBottomOf="@id/et_nama_agency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gl_iklan"/>

            <TextView
                android:id="@+id/et_content_nomor_kontrak"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text=": -"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_iklan"
                app:layout_constraintTop_toBottomOf="@id/et_content_nama_agency" />

            <TextView
                android:id="@+id/et_titik_iklan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:text="Titik Iklan"
                app:layout_constraintTop_toBottomOf="@id/et_nomor_kontrak"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gl_iklan"/>

            <TextView
                android:id="@+id/et_content_titik"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:padding="4dp"
                android:text="-"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/et_titik_iklan" />

            <TextView
                android:id="@+id/et_content_titik_iklan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text=":"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_iklan"
                app:layout_constraintTop_toBottomOf="@+id/et_nomor_kontrak" />

            <TextView
                android:id="@+id/et_konten_iklan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:text="Konten Iklan"
                app:layout_constraintTop_toBottomOf="@id/et_content_titik"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gl_iklan"/>

            <TextView
                android:id="@+id/et_content_konten_iklan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text=": -"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_iklan"
                app:layout_constraintTop_toTopOf="@+id/et_konten_iklan" />
            <TextView
                android:id="@+id/et_kategori_iklan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:text="Kategori Iklan"
                app:layout_constraintTop_toBottomOf="@id/et_konten_iklan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gl_iklan"/>

            <TextView
                android:id="@+id/et_content_kategori_iklan"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="4dp"
                android:text=": -"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_iklan"
                app:layout_constraintTop_toBottomOf="@+id/et_konten_iklan" />

            <TextView
                android:id="@+id/et_durasi_awal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:text="Durasi Awal"
                app:layout_constraintTop_toBottomOf="@id/et_kategori_iklan"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gl_iklan"/>

            <TextView
                android:id="@+id/et_content_durasi_awal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text=": -"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_iklan"
                app:layout_constraintTop_toBottomOf="@id/et_content_kategori_iklan" />

            <TextView
                android:id="@+id/et_durasi_akhir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                android:text="Durasi Akhir"
                app:layout_constraintTop_toBottomOf="@id/et_durasi_awal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gl_iklan"/>

            <TextView
                android:id="@+id/et_content_durasi_akhir"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text=": -"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_iklan"
                app:layout_constraintTop_toBottomOf="@id/et_content_durasi_awal" />

            <TextView
                android:id="@+id/catatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Catatan"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_durasi_akhir"/>
            
            <EditText
                android:id="@+id/et_catatan"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginHorizontal="12dp"
                android:padding="8dp"
                android:background="@drawable/bg_textarea"
                android:inputType="text|textMultiLine"
                android:hint="Catatan"
                app:layout_constraintTop_toBottomOf="@id/catatan"/>

            <TextView
                android:id="@+id/et_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apakah Data Iklan Sesuai?"
                android:padding="4dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_catatan"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/gl_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_ya"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Ya"
                android:backgroundTint="@color/kciGreen"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/gl_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/et_question"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_tidak"
                android:layout_width="130dp"
                android:layout_height="60dp"
                android:text="Tidak"
                android:backgroundTint="@color/kciDarkRed"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/gl_btn"
                app:layout_constraintTop_toBottomOf="@id/et_question"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>